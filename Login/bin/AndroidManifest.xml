<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.learn2crack"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="17"
            android:targetSdkVersion="19"/>
    <application 
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
             
        <activity android:name="Login"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.learn2crack.Register"
                  android:label="@string/app_name">

        </activity>

        <activity android:name="com.learn2crack.Registered"
                  android:label="@string/app_name">

        </activity>


        <activity android:name="com.learn2crack.Main"
                  android:label="Learn2Crack USER PANEL"
                  android:parentActivityName="Login">

        </activity>
       
        <activity android:name="com.learn2crack.PasswordReset"
                  android:label="@string/app_name">

        </activity>
        <activity android:name="com.learn2crack.Uploadform"
                  android:label="@string/app_name">

        </activity>
        <activity android:name="com.learn2crack.ChangePassword"
                  android:label="@string/app_name">

        </activity>
         <activity
            android:name="de.vogella.camera.api.MakePhotoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-feature android:name="android.hardware.camera"
                  android:required="false" />
     <!-- Allow to connect with internet and to know the current network state-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />   
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  
</manifest>
