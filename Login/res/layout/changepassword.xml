<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/changepasswordback">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:text="New Password"
        android:paddingTop="14dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="60dp"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/newpass"
            android:hint="new password"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:password="true"/>

    <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/changebutton"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btchangepass"
            android:textColor="#000000"
            android:layout_below="@+id/textView3"
            android:textSize="13dp"/>

    <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Cancel"
            android:visibility="gone"
            android:id="@+id/btcancel"
            android:textColor="#000000"
            android:layout_alignTop="@+id/btchangepass"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/btchangepass"
            android:textSize="13dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:id="@+id/alertpass"
            android:textColor="#000000"
            android:layout_below="@+id/btchangepass"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
</RelativeLayout>