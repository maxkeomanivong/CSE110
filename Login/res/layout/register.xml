<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/loginback">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg_logo" android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo"/>            


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name: "
            android:id="@+id/textView2"
            android:textColor="#000000"
            android:layout_marginLeft="35dp"
            android:layout_alignBottom="@+id/fname"
            android:paddingBottom="9dp"
            android:textSize="15dp"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/fname"
            android:hint="First Name"
            android:textColor="#000000"
            android:layout_below="@+id/reg_logo"
            android:layout_toRightOf="@+id/textView2"
            android:layout_marginTop="15dp"
            android:textSize="15dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name: "
            android:textColor="#000000"
            android:id="@+id/textView3"
            android:layout_marginTop="20dp"
            android:paddingBottom="9dp"
            android:layout_alignBottom="@+id/lname"
            android:layout_alignRight="@+id/textView2"
            android:textSize="15dp"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:id="@+id/lname"
            android:hint="Last Name"
            android:layout_below="@+id/fname"
            android:layout_alignLeft="@+id/fname"
            android:textSize="15dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Email: "
            android:layout_marginTop="20dp"
            android:id="@+id/textView4"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignBottom="@+id/email"
            android:paddingBottom="9dp"
            android:textSize="15dp"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:hint="E-mail"
            android:layout_below="@+id/lname"
            android:layout_alignLeft="@+id/lname"
            android:textSize="15dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Username: "
            android:layout_marginTop="20dp"
            android:id="@+id/textView5"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignBottom="@+id/uname"
            android:paddingBottom="9dp"
            android:textSize="15dp"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:id="@+id/uname"
            android:hint="Username"
            android:layout_below="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:textSize="15dp"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pword"
            android:hint="Password"
            android:layout_below="@+id/uname"
            android:layout_alignLeft="@+id/uname"
            android:textSize="15dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Password: "
            android:layout_marginTop="20dp"
            android:id="@+id/textView6"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignBottom="@+id/pword"
            android:paddingBottom="9dp"
            android:textSize="15dp"/>

    <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="Register"
            android:id="@+id/register"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/textView6"
            android:textSize="13dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"/>

    <Button
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="Back To Login"
            android:id="@+id/bktologin"
            android:layout_below="@+id/register"
            android:textSize="13dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:background="@drawable/button"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:textColor="#000000"
            android:id="@+id/register_error"
            android:layout_below="@+id/register"
            android:layout_alignParentRight="true"/>

</RelativeLayout>

