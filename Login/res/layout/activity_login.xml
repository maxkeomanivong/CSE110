<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/loginback">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="E-MAIL"
            android:id="@+id/email"
            android:layout_below="@id/textView"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:textColor="#000000"/>

    <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/userLogo"
            android:layout_alignBottom="@id/email"
            android:layout_toStartOf="@id/email"
            android:layout_marginRight="15dp"
            android:src="@drawable/username"/>
    
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pword"
            android:hint="PASSWORD"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            android:textColor="#000000"/>
   
    <Button
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:text="Register"
            android:id="@+id/registerbtn"
            android:layout_below="@id/pword"
            android:layout_marginTop="35dp"
            android:layout_marginRight="40dp"
            android:textSize="13dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:background="@drawable/button"/>          
        
    <Button
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:text="Login"
            android:id="@+id/login"
            android:textSize="13dp"
            android:textColor="#000000"
            android:layout_alignTop="@id/registerbtn"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button"/>
 
    
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginErrorMsg"
            android:textColor="#ff0000"
            android:layout_below="@id/pword"
            android:layout_centerHorizontal="true"
            />


    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/lock"
            android:layout_alignBottom="@id/pword"
            android:layout_toStartOf="@id/pword"
            android:layout_marginRight="15dp"
            android:src="@drawable/password"/>
    
    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_alignLeft="@id/login"
        android:layout_marginTop="3dp"
        android:text="Remember Me"
        android:textSize="13dp"
        android:textColor="#000000" />
    

    <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Forgot Password?"
            android:id="@+id/passres"
            android:layout_below="@id/checkBox1"
            android:textSize="13dp"
            android:layout_alignLeft="@id/checkBox1"
            android:layout_marginLeft="9dp"
            android:background="@android:color/transparent"
            android:textColor="#000000"/>
    
    
</RelativeLayout>

